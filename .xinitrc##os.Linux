# Set key press auto-repeat
xset r rate 300 50
fcitx5 &
# dwm status bar
dwmstatus 2>&1 >/dev/null &

# Set a random wallpaper
# feh --bg-fill --randomize ~/Pictures/Wallpapers/*
$HOME/.fehbg

# 启用 compositor，这样才能把st的背景变得透明
picom &

# 熄屛后需输入密码 
$HOME/.local/bin/xsidle.sh slock &

# Finally, start dwm
exec dwm
